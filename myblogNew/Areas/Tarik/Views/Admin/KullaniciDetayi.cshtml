
@{
    ViewBag.Title = "KullaniciDetayi";
    Layout = "~/Areas/Tarik/Views/Shared/_LayoutPage.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Kullanıcı Detayı</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kullanıcı Detayı
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @{
                        if (Model.Count > 0)
                        {
                            foreach (var kullanici in Model)
                            {
                                <form name="mainForm" id="mainForm" action="/Admin/KullaniciGuncelle/@kullanici.KullaniciID" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Kullanıcı Adı</label>
                                        <input class="form-control" placeholder="Kullanıcı Adı" name="txtAdi" type="text" id="txtAdi" value="@kullanici.KullaniciAdi">
                                    </div><div class="form-group">
                                        <label>E-Posta</label>
                                        <input class="form-control" placeholder="E-Posta" name="txtMail" type="email" valitade id="txtMail" value="@kullanici.Mail">
                                    </div>
                                    <button class="btn btn-success" name="gonder" id="gonder">Güncelle</button>
                                </form>
                            }
                        }
                        else
                        {
                            <form name="mainForm" id="mainForm" action="/Admin/YeniKullanici" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <input class="form-control" placeholder="Kullanıcı Adı" name="txtAdi" type="text" id="txtAdi" value="">
                                </div><div class="form-group">
                                    <label>E-Posta</label>
                                    <input class="form-control" placeholder="E-Posta" name="txtMail" type="email" valitade id="txtMail" value="">
                                </div>
                                <button class="btn btn-success" name="gonder" id="gonder">Kaydet</button>
                            </form>
                        }
                    }
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<!-- DataTables JavaScript -->

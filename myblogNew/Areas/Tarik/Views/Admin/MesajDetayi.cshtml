@{
    ViewBag.Title = "Mesaj Detayi";
    Layout = "~/Areas/Tarik/Views/Shared/_LayoutPage.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Mesaj Detayı</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Mesaj Detayı
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @{
                        if (Model.Count > 0)
                        {
                            foreach (var mesaj in Model)
                            {
                                <form name="mainForm" id="mainForm" action="/Admin/MesajGuncelle/@mesaj.MesajID" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Adı</label>
                                        <input class="form-control" placeholder="Kullanıcı Adı" name="txtAdi" type="text" id="txtAdi" value="@mesaj.Ad">
                                    </div><div class="form-group">
                                        <label>E-Posta</label>
                                        <input class="form-control" placeholder="E-Posta" name="txtMail" type="email" valitade id="txtMail" value="@mesaj.Mail">
                                    </div>
                                    <div class="form-group">
                                        <label>Telefon</label>
                                        <input class="form-control" placeholder="Telefon" name="txtTelefon" type="tel" valitade id="txtTelefon" value="@mesaj.Telefon">
                                    </div>
                                    <div class="form-group">
                                        <label>Mesaj</label>
                                        <input class="form-control" placeholder="Mesajı" name="txtMesaj" type="text" valitade id="txtMesaj" value="@mesaj.Mesaj">
                                    </div>
                                    <button class="btn btn-success" name="gonder" id="gonder">Güncelle</button>
                                </form>
                            }
                        }
                        else
                        {
                            <form name="mainForm" id="mainForm" action="/Admin/YeniMesaj" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Adı</label>
                                    <input class="form-control" placeholder="Kullanıcı Adı" name="txtAdi" type="text" id="txtAdi">
                                </div><div class="form-group">
                                    <label>E-Posta</label>
                                    <input class="form-control" placeholder="E-Posta" name="txtMail" type="email" valitade id="txtMail">
                                </div>
                                <div class="form-group">
                                    <label>Telefon</label>
                                    <input class="form-control" placeholder="Telefon" name="txtTelefon" type="tel" valitade id="txtTelefon">
                                </div>
                                <div class="form-group">
                                    <label>Mesaj</label>
                                    <input class="form-control" placeholder="Mesajı" name="txtMesaj" type="text" valitade id="txtMesaj">
                                </div>
                                <button class="btn btn-success" name="gonder" id="gonder">Kaydet</button>
                            </form>
                        }
                    }
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

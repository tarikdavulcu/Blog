
@{
    ViewBag.Title = "Menu";
    Layout = "~/Areas/Tarik/Views/Shared/_LayoutPage.cshtml";
}
@model IEnumerable<myblogNew.Models.Menu>




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Menü Listesi</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Menü Listesi
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <p> <a href="/Tarik/Admin/MenuDetayi" class="btn btn-warning nav-link">Yeni Menü</a></p>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Menu ID</th>
                                <th>Adı</th>
                                <th>Açıklama</th>
                                <th>Link</th>
                                <th>Sıra No</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">

                                    <td>@item.MenuID</td>
                                    <td>@item.Adi</td>
                                    <td>@item.Aciklama</td>
                                    <td>@item.Link</td>
                                    <td>@item.SiraNo</td>
                                    <td><a href="/Tarik/Admin/MenuDetayi/@item.MenuID" class="btn btn-info" id='@item.MenuID'>Düzenle</a></td>
                                    <td><a href="/Tarik/Admin/Menu/@item.MenuID" class="btn btn-danger" id='@item.MenuID'>Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <h4>Tablo Bilgilendirmesi</h4>
                        <p>DataTables is a very flexible</p>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

</div>
<!-- /#page-wrapper -->
<!-- DataTables JavaScript -->


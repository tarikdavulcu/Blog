
@{
    ViewBag.Title = "Bloglar";
    Layout = "~/Areas/Tarik/Views/Shared/_LayoutPage.cshtml";
}
@model IEnumerable<myblogNew.Models.Blog>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bloglar</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Bloglar Listesi
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <p> <a href="/Tarik/Admin/BlogDetayi" class="btn btn-warning nav-link">Yeni Blog</a></p>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Blog ID</th>
                                <th>Başlık</th>
                                <th>Alt Başlık</th>
                                <th>Yüklenme Tarihi</th>
                                <th>Seo Linki</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">

                                    <td>@item.BlogID</td>
                                    <td>@item.Baslik</td>
                                    <td>@item.AltBaslik</td>
                                    <td>@item.PostTarihi</td>
                                    <td>@item.SeoLink</td>
                                    
                                    <td><a href="/Tarik/Admin/BlogDetayi/@item.BlogID" class="btn btn-info" id='@item.BlogID'>Düzenle</a></td>
                                    <td><a href="/Tarik/Admin/Bloglar/@item.BlogID" class="btn btn-danger" id='@item.BlogID'>Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <h4>Tablo Bilgilendirmesi</h4>
                        <p>DataTables is a very flexible</p>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

</div>
<!-- /#page-wrapper -->
<!-- DataTables JavaScript -->


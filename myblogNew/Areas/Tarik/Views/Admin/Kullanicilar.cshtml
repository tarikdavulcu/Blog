@{
    ViewBag.Title = "Kullanicilar";
    Layout = "~/Areas/Tarik/Views/Shared/_LayoutPage.cshtml";
}
@model IEnumerable<myblogNew.Models.Kullanicilar>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Kullanıcılar Listesi</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kullanıcılar Listesi
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <p> <a href="/Tarik/Admin/KullaniciDetayi" class="btn btn-warning nav-link">Yeni Kullanıcı</a></p>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Kullanıcı ID</th>
                                <th>Kullanıcı Adı</th>
                                <th>Mail</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.KullaniciID</td>
                                    <td>@item.KullaniciAdi</td>
                                    <td>@item.Mail</td>
                                    <td><a href="/Tarik/Admin/KullaniciDetayi/@item.KullaniciID" class="btn btn-info" id='@item.KullaniciID'>Düzenle</a></td>
                                    <td><a href="/Tarik/Admin/Kullanicilar/@item.KullaniciID" class="btn btn-danger" id='@item.KullaniciID'>Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <h4>Tablo Bilgilendirmesi</h4>
                        <p>Kullanıcı Listeleme Güncelleme Silme Sayfasıdır.</p>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<!-- DataTables JavaScript -->